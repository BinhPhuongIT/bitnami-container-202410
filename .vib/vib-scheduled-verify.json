{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{VIB_ENV_URL}",
          "path": "{VIB_ENV_PATH}"
        }
      },
      "actions": [
        {
          "action_id": "container-image-package",
          "params": {
            "application": {
              "details": {
                "name": "{VIB_ENV_CONTAINER}",
                "tag": "{VIB_ENV_TAG}"
              }
            }
          }
        },
        {
          "action_id": "container-image-lint"
        }
      ]
    }
  }
}